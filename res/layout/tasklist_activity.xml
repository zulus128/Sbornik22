<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskListActivity" >

    <RelativeLayout
        android:id="@+id/RelLayout_TaskList01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/MyBlue"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/bottompanel_vertical_margin"
        android:paddingLeft="@dimen/bottompanel_horizontal_margin"
        android:paddingRight="@dimen/bottompanel_horizontal_margin"
        android:paddingTop="@dimen/bottompanel_vertical_margin" >

        <TextView
            android:id="@+id/TaskListTitle01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10sp"
            android:paddingTop="10sp"
            android:text="@string/title_label"
            android:textColor="@color/White"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/button_oglav"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentRight="true"
            android:background="@drawable/list"
            android:contentDescription="@string/buttitle_oglav"
            android:onClick="goToOglav"
            android:paddingRight="10sp"
            android:paddingTop="10sp"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/button_fav"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_toLeftOf="@+id/button_oglav"
            android:background="@drawable/my"
            android:contentDescription="@string/buttitle_fav"
            android:onClick="goToFavourites"
            android:paddingRight="10sp"
            android:paddingTop="10sp"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/button_search"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_toLeftOf="@+id/button_fav"
            android:background="@drawable/search"
            android:contentDescription="@string/buttitle_search"
            android:onClick="goToSearch"
            android:paddingRight="10sp"
            android:paddingTop="10sp"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LinLayout_task01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/RelLayout_TaskList01"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/TaskList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@android:color/transparent"
            android:choiceMode="singleChoice"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:paddingBottom="5dp"
            android:paddingTop="0dp" >
        </ListView>
    </LinearLayout>

</RelativeLayout>